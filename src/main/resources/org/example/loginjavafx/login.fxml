<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/21" fx:controller="org.example.loginjavafx.MainController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label text="Registro de Usuarios" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

    <TextField fx:id="userNameField" promptText="ID Usuario" />
    <TextField fx:id="movieTitleField" promptText="Correo Electrónico" />
    <TextField fx:id="passwordField" promptText="Contraseña" />

    <Button fx:id="saveButton" text="Guardar Usuario" onAction="#handleSaveButton"/>

    <TableView fx:id="favoritesTable" prefHeight="200.0" prefWidth="200.0">
        <columns>
            <TableColumn fx:id="userColumn" prefWidth="75.0" text="ID" />
            <TableColumn fx:id="movieColumn" prefWidth="150.0" text="Correo" />
            <TableColumn fx:id="passwordColumn" prefWidth="100.0" text="Pass" />
        </columns>
    </TableView>
</VBox>